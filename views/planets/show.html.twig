{% extends "layouts/base.html.twig" %}

{% block page_title %}View {{ planet.name }}{% endblock %}

{% block app %}
<h1>View {{ planet.name }}</h1>

<ul>
  <li>
    <label>ID:</label> {{ planet.id }}
  </li>
  <li>
    <label>Name:</label> {{ planet.name }}
  </li>
  <li>
    <label>Has Rings:</label> {{ planet.hasRings ? "Yes" : "No"}}
  </li>
  <li>
    <label>Mass:</label> {{ planet.mass }}
  </li>
</ul>

<p>
  <a href="/planets/{{ planet.id }}/edit">Edit</a>
  <a href="/planets/{{ planet.id }}/delete">Remove</a>
</p>
<p>
<a href="/planets">Back to Planets</a>
</p>
{% endblock %}